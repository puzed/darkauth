{
	"name": "@DarkAuth/api",
	"version": "1.0.0",
	"license": "AGPL-3.0",
	"description": "DarkAuth API server with OPAQUE authentication and OIDC compatibility",
	"type": "module",
	"main": "src/main.ts",
  "scripts": {
    "dev": "tsx watch src/main.ts",
    "build": "tsc",
    "start": "tsx src/main.ts",
    "test": "tsx --test src/**/*.test.ts",
    "db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "tsx src/db/migrate.ts",
		"db:wipe": "tsx scripts/wipe.ts",
		"install:script": "tsx scripts/install.ts",
		"typecheck": "tsc --noEmit",
		"format": "biome format --write .",
		"lint": "biome lint .",
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"tidy": "biome check --write . && biome lint --write ."
	},
	"dependencies": {
		"@peculiar/webcrypto": "^1.5.0",
		"argon2": "^0.44.0",
		"drizzle-orm": "^0.44.5",
		"drizzle-zod": "^0.8.3",
		"jose": "^6.1.0",
		"opaque-ts": "file:../opaque-ts",
    "pg": "^8.16.3",
    "pino": "^9.11.0",
    "@electric-sql/pglite": "^0.3.10",
		"tsx": "^4.20.6",
		"yaml": "^2.8.1",
		"zod": "^4.1.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/node": "^24.5.2",
		"@types/pg": "^8.15.5",
		"drizzle-kit": "^0.31.5",
		"pino-pretty": "^13.1.1",
		"typescript": "^5.9.2"
	},
	"overrides": {
		"esbuild": "^0.25.9",
		"@esbuild-kit/esm-loader": {
			".": "npm:tsx@^4.20.4",
			"@esbuild-kit/core-utils": {
				"esbuild": "^0.25.9"
			}
		},
		"drizzle-kit@0.31.5": {
			"esbuild": "^0.25.9"
		}
	},
	"engines": {
		"node": ">=20.0.0"
	}
}
